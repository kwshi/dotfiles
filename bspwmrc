#!/bin/elvish

wmname LG3D

sxhkd -s /tmp/sxhkd.fifo &


echo $E:PATH > /home/kshi/path
pwd > /home/kshi/pwd

termite &
/home/kshi/go/bin/ksbar -conf /home/kshi/.config/ksbar/ksbar.toml &
/home/kshi/go/bin/ksbar -conf /home/kshi/.config/ksbar/ksbar-bottom.toml &
sleep .5
stalonetray &

echo stuff > /home/kshi/check-2

bspc config normal_border_color '#32302f'
bspc config active_border_color '#a89984'
bspc config focused_border_color '#ebdbb2'

bspc config border_width 4
bspc config window_gap 16
bspc config top_padding 24
bspc config right_padding 0
bspc config left_padding 0
bspc config bottom_padding 24

# `xprop WM_CLASS` to get names
bspc rule -a Zathura state=tiled
bspc rule -a Emacs state=tiled
bspc rule -a 'Firefox Developer Edition' state=tiled

bspc monitor -d 1 2 3 4 5 6 7 8 9 0
