[colors]
dark = #1d2021
background = #32302f
foreground = #ebdbb2
gray = #928374
aqua = #8ec07c


[bar/top]
bottom = false
width = 100%
height = 24
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Roboto Mono:size=10;2"
font-1 = "Roboto Mono:style=Bold:size=10;2"
font-2 = "FontAwesome:size=12;2"

modules-left = desktops
modules-right = light volume battery date

separator = "   "
padding-right = 1

[bar/bottom]
bottom = true
width = 100%
height = 24
background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Roboto Mono:size=10;2"
font-1 = "Roboto Mono:style=Bold:size=10;2"
font-2 = "FontAwesome:size=12;2"

tray-position = right
tray-maxsize = 16

modules-left = title
padding-left = 1

[module/desktops]
type = internal/bspwm
enable-click = true

label-focused = " %{T2}%name% "
label-occupied = ${self.label-focused}
label-empty = ${self.label-focused}
label-focused-background = ${colors.aqua}
label-occupied-background = ${colors.background}
label-empty-background = ${colors.dark}

[module/date]
type = internal/date
interval = .5
label =  %date% %time%
time = %I:%M:%S %P
date = %Y %B %d (%A)

[module/light]
type = internal/xbacklight 
label =  %percentage%%

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

format-muted = %{F#928374}<ramp-volume>%{F-} <label-muted>
label-muted = %percentage%%

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery

full-at = 100

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%

format-full = %{F#8ec07c}${self.animation-charging-4}%{F-} %label%
label-full = 100%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 500

[module/title]
type = internal/xwindow
label = %title%
